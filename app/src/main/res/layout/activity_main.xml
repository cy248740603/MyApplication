<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="58dp"
    android:layout_marginRight="58dp"
    android:layout_marginLeft="58dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="账号:"
        android:textSize="70px"/>
    <TextView
        android:id="@+id/text_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="密码:"
        android:layout_marginTop="10dp"
        android:textSize="70px"
        android:layout_below="@id/text_user"/>
    <TextView
        android:id="@+id/text_rember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="记住密码"
        android:layout_marginTop="10dp"
        android:textSize="30px"
        android:layout_below="@id/text_password"/>
    <EditText
        android:id="@+id/edit_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:hint="账号"
        android:layout_toRightOf="@+id/text_user" />

    <EditText
        android:id="@+id/edit_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="密码"
        android:layout_below="@id/edit_Text"
        android:layout_toRightOf="@id/text_password"/>
    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_password"
        android:layout_toRightOf="@+id/text_rember"/>
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_send"
        android:layout_below="@+id/text_rember"
        android:layout_centerHorizontal="true"
        android:onClick="sendMessage"/>
</RelativeLayout>
